#!/usr/bin/bash

#
# Install Nextcloud-Upgrade
#
NEXTCLOUD_VERSION="$1"
DESTDIR="/var/www/htdocs/nextcloud"

if [[ -z "${NEXTCLOUD_VERSION}" ]]; then
  echo "Nextcloud version number, like 26.0.5 missing!"
  exit 1
fi

echo "* Install nextcloud version: ${NEXTCLOUD_VERSION}"
mkdir -p "${DESTDIR}/releases"
cd "${DESTDIR}/releases"
curl -s -L -O https://download.qutic.com/src/nextcloud/nextcloud-$NEXTCLOUD_VERSION.tar.bz2
tar xf nextcloud-$NEXTCLOUD_VERSION.tar.bz2
rm nextcloud-$NEXTCLOUD_VERSION.tar.bz2
mv nextcloud nc-$NEXTCLOUD_VERSION
rm -rf nc-$NEXTCLOUD_VERSION/config

echo "* Setup nextcloud-apps"
NEXTCLOUD_APPS="
  analytics-6.0.2.tar.gz
  appointments.tar.gz
  bbb-v2.9.1.tar.gz
  bookmarks-16.0.1.tar.gz
  calendar-v6.1.5.tar.gz
  camerarawpreviews_nextcloud.tar.gz
  checksum.tar.gz
  collectives-3.5.0.tar.gz
  contacts-v8.2.1.tar.gz
  cookbook-0.11.5.tar.gz
  cospend-3.2.0.tar.gz
  deck-v1.16.3.tar.gz
  dicomviewer-2.3.1.tar.gz
  emlviewer.tar.gz
  event_update_notification-v2.7.0.tar.gz
  files_automatedtagging-v3.0.2.tar.gz
  files_linkeditor.tar.gz
  files_mindmap-0.0.33.tar.gz
  forms-v5.2.3.tar.gz
  gpxpod-7.2.4.tar.gz
  imageconverter.tar.gz
  keeweb-0.6.22.tar.gz
  mail-v5.6.7.tar.gz
  maps-1.6.0.tar.gz
  memories.tar.gz
  music_2.5.1_for_nextcloud.tar.gz
  news.tar.gz
  notes-v4.12.4.tar.gz
  notify_push-v1.3.0.tar.gz
  oidc-1.14.7.tar.gz
  onlyoffice.tar.gz
  phonetrack-0.9.1.tar.gz
  polls-v8.6.3.tar.gz
  quota_warning-v1.22.0.tar.gz
  side_menu_v5.1.3.tar.gz
  sip_trip_phone.tar.gz
  spreed-v22.0.8.tar.gz
  theming_customcss.tar.gz
  timetracker-0.0.86.tar.gz
"

cd nc-${NEXTCLOUD_VERSION}/apps
for nc_app in ${NEXTCLOUD_APPS[@]}; do
  /opt/local/bin/curl -s -L -O "https://download.qutic.com/src/nextcloud/apps-$NEXTCLOUD_VERSION/${nc_app}"
  if [[ -f "${nc_app}" ]]; then
    echo "** Installing app: ${nc_app}"
    /usr/bin/gtar xf "${nc_app}" || true
  fi
done

# cleanup archives
rm *.tar.gz

cd "${DESTDIR}"

if [[ -L "${DESTDIR}/current" ]]; then
  PREVIOUS_RELEASE=$(ls -l "${DESTDIR}/current" 2>/dev/null |  sed -e 's/.*-> \s*//')
  rm -rf "${DESTDIR}/current"
fi

echo "* Setup nextcloud"
ln -nfs "${DESTDIR}/releases/nc-$NEXTCLOUD_VERSION/" current
chown -R www:www "${DESTDIR}"

echo "* Remove any mac double files"
find "${DESTDIR}/current/apps/" -name ._* -exec rm {} \;

if [[ -z "${PREVIOUS_RELEASE}" ]]; then
  exit 0
fi

echo "* Copy old config over from previous version"
mv "${DESTDIR}/current/config" "${DESTDIR}/current/config.bak"
mkdir "${DESTDIR}/current/config"
cp "${PREVIOUS_RELEASE}/config/config.php" "${DESTDIR}/current/config/"

if mdata-get data_path 1>/dev/null 2>&1; then
  echo "* Link data into place"
  DATA_PATH=`mdata-get data_path`
  cd "${DESTDIR}/current/"
  ln -nfs "$DATA_PATH" data
fi

echo "* Update Nextcloud and restart services"
chown -R www:www "${DESTDIR}"
sudo -u www php /var/www/htdocs/nextcloud/current/occ maintenance:mode --on
sudo -u www php /var/www/htdocs/nextcloud/current/occ upgrade
sudo -u www php /var/www/htdocs/nextcloud/current/occ db:add-missing-indices
sudo -u www php /var/www/htdocs/nextcloud/current/occ db:add-missing-columns
sudo -u www php /var/www/htdocs/nextcloud/current/occ db:convert-mysql-charset
sudo -u www php /var/www/htdocs/nextcloud/current/occ maintenance:repair --include-expensive
sudo -u www php /var/www/htdocs/nextcloud/current/occ db:convert-filecache-bigint --no-interaction
sudo -u www php /var/www/htdocs/nextcloud/current/occ config:system:set maintenance_window_start --type=integer --value=1
sudo -u www php /var/www/htdocs/nextcloud/current/occ maintenance:mode --off

svcadm restart svc:/pkgsrc/php-fpm84:default
svcadm restart nginx

if [[ -d /var/www/htdocs/nextcloud/current/apps/notify_push ]]; then
  echo "* Install notify_push binary"
  if [[ ! -f /var/www/htdocs/nextcloud/current/apps/notify_push/bin/x86_64_illumos/notify_push ]]; then
    (
      cd /var/www/htdocs/nextcloud/current/apps/notify_push
      mkdir -p ./bin/x86_64_illumos
      cp /data/shared/bin/notify_push ./bin/x86_64_illumos/notify_push
      chown -R www:www .
    )
  else
    echo "  ...skip install, binary already exists"
  fi
  svccfg import /opt/local/lib/svc/manifest/notify_push.xml
  svcadm enable svc:/network/notify-push:default
  sudo -u www php /var/www/htdocs/nextcloud/current/occ app:enable notify_push
  
  if mdata-get server_alias 1>/dev/null 2>&1; then
    SERVER_NAME=`mdata-get server_name`
    sudo -u www php /var/www/htdocs/nextcloud/current/occ notify_push:setup "https://${SERVER_NAME}/push"
  fi
fi

exit 0